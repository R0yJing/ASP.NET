<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MelanomaClassification.Views.ViewRegistrationPage"
             BackgroundColor="LightGreen"
             Title="Registration">
 
    <ContentPage.Content>
        <Grid>
            <StackLayout>
                <Entry x:Name="EmailEntry" Placeholder="Enter email" />
                <Entry x:Name="PswdEntry" Placeholder="Enter password" IsPassword="True" />
                <Entry x:Name="ConfmPswdEntry" Placeholder="Confirm password" IsPassword="True"/>
                <Button BackgroundColor="White" TextColor="Gray" HorizontalOptions="CenterAndExpand" CornerRadius="20" Text="Register" Command="{Binding Register}" />
                <ActivityIndicator x:Name="LoadingSymbol" IsRunning="false" VerticalOptions="Center" HorizontalOptions="Center" />
            </StackLayout>
            <ContentView x:Name="Loading" IsVisible="false" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <ActivityIndicator IsRunning="false" />
            </ContentView>
        </Grid>
    </ContentPage.Content>
</ContentPage>